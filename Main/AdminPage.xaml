<Page x:Class="ЖКХ.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ЖКХ"
      Title="Панель администратора">

    <DockPanel>
        <!-- Панель навигации -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#EEEEEE">
            <TextBlock Text="Админ-панель" FontWeight="Bold" FontSize="16" Margin="10"/>
            <Button Content="Пользователи" Click="Users_Click" Margin="5"/>
            <Button Content="Жильцы" Click="Residents_Click" Margin="5"/>
            <Button Content="Квартиры" Click="Apartments_Click" Margin="5"/>
            <Button Content="Здания" Click="Buildings_Click" Margin="5"/>
            <Button Content="Компании" Click="Companies_Click" Margin="5"/>
            <Button Content="Услуги" Click="Services_Click" Margin="5"/>
            <Button Content="Платежи" Click="Payments_Click" Margin="5"/>
            <Button Content="Счетчики" Click="Meters_Click" Margin="5"/>
            <Button Content="Показания" Click="Readings_Click" Margin="5"/>
            <Button Content="Заявки" Click="Requests_Click" Margin="5"/>
            <Button Content="Выйти" Click="LogoutButton_Click" Margin="5" Foreground="Red"/>
        </StackPanel>

        <!-- Контент -->
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Page>
